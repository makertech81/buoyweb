---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Boat riding in water."
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Web design made easy.
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Affordable, scalable web services for startups and small businesses alike. <wbr /> Get a professional website up and running in 48 hours or less.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#pricing"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        

         See Plans
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://calendly.com/tj-buoywebdev/30min"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        
         Schedule a Call
      </Link>
    </div>
  </div>
</main>
